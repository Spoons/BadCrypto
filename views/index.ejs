<%- include partials/_header.ejs %>


        <main>

          <div class="text-center" id="main_logo_container">
              <img src="/images/logo_medium.png" alt="NodeCrypto Logo" class="rounded">
          </div>

           <div class="jumbotron">
             <% if (!user){ %>
              <div class="jumbotron-header">
                  <h2>About NodeCrypto</h2>
              </div>
              <div class="jumbotron-body">
                <h3>Welcome to NodeCrypto!</h3><br><br>
                <p>
                We are an open-source encrypted file storage platform based on Node.js.
                Our objective is to show how online service providers can protect user privacy.
                </p>

                <p>Sign up or Log in to get started.</p>

                <a class="btn btn-primary btn-success btn-lg" href="/users/register">Register</a>
                <a class="btn btn-primary btn-lg" href="/users/login">Login</a>
              </div>
              <% }else{ %>
               <div class="jumbotron-header">
                  <h2>NodeCrypto - For your safe file storage links</h2>
               </div>
              <div class="jumbotron-body">
                <p>Check below for some common links:</p>

                <div class="center-content">
                        <a class="btn btn-primary btn-lg btn-success" href="/<%= user.schema.id.value %>/files/files">View my files</a>
                        <a class="btn btn-primary btn-lg btn-success" href="/<%= user.schema.id.value %>/files/">Upload a file</a>
                        <a class="btn btn-primary btn-lg btn-success" href="/users/logout">Logout</a>
                </div>
              </div>
              <% } %>
           </div>
        </main>

<%- include partials/_footer.ejs %>
