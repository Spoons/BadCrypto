<!DOCTYPE html>
<html lang="en">
    <%- include _head.ejs %>
    <body>
        <header>
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                    <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar_main" aria-expanded="true" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">NodeCrypto</a>
                    </div>
                    <div id="navbar_main" class="navbar-collapse collapse in" aria-expanded="true" style="">
                    <ul class="nav navbar-nav">
                     <% if (user){ %>
                      <li><a href="/">Home</a></li>
                      
                      <!-- //TODO: Replace with /files/<%= user.schema.id %>  -->
                      <li><a href="/files/">Files</a></li>
                      
                      <!-- //TODO: Replace with /users/<%= user.schema.id %> -->
                      <li><a href="/">Account</a></li>
                     <% } %>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <% if (user) { %>
                            <li><p class="navbar-text signed-in-as">Signed in as <%= user.schema.username.value %></p></li>
                            <li><a href="/users/logout">Logout</a></li>
                        <% }else{ %>
                            <li><a href="/users/register">Register</a></li>
                            <li><a href="/users/login">Login</a></li>
                        <% } %>
                    </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
           
            <% if (success_message != ""){ %>
                <div class="alert alert-success">
                    <%= success_message %>
                </div>
            <% } %>
            
            <% if (error_message != ""){ %>
                <div class="alert alert-warning">
                    <%= error_message %>
                </div>
            <% } %>
            
            <% if (error != ""){ %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %> 
        </header>
