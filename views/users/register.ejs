<%- include ../partials/_header.ejs %>

        <main>
          <% if (typeof errors == 'object' && errors) { %>
              <% for (let i = 0; i < errors.length; i++){ %>
                  <p>Error: <%= errors[i].msg %></p>
              <% } %>
          <% } %>

          <div id="signup">
      			<form  action="register" method="post">
      				<h1>Sign Up</h1>
      				<div class="input-group">
      					<span class="input-group-addon" id="firstname-addon">First Name</span>
      					<input id="firstname" name="firstname" required="required" type="text" placeholder="First Name" artia-describedby="firstname-addon" class="form-control"/>
      				</div>
      				<div class="input-group">
      					<span class="input-group-addon" id="lastname-addon">Last Name</span>
      					<input id="lastname" name="lastname" required="required" type="text" placeholder="Last Name" artia-describedby="lastname-addon" class="form-control"/>
      				</div>
      				<div class="input-group">
      					<span class="input-group-addon" id="username-addon">Username</span>
      					<input id="username" name="username" required="required" type="text" placeholder="Username" artia-describedby="username-addon" class="form-control"/>
      				</div>
      				<div class="input-group">
      					<span class="input-group-addon" id="password-addon">Password</span>
      					<input id="password" name="password" required="required" type="password" placeholder="Password"
      					artia-describedby="password-addon" class="form-control"/>
      				</div>
      				<div class="input-group">
      					<span class="input-group-addon" id="passwordconf-addon">Confirm Password</span>
      					<input id="password_conf" name="password_conf" required="required" type="password" placeholder="Please confirm your password" artia-describedby="passwordconf-addon" class="form-control"/>
      				</div>
                    <button type="submit" value="Sign Up" class="btn btn-success">Sign Up</button>
      			</form>
	          </div>
        </main>

<%- include ../partials/_footer.ejs %>